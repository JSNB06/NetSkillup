<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skillup</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto.styles.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(135deg, #ffecd2, #fcb69f);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        /* NAVBAR ESTILO ESCOLAR */
        .navbar-school {
            background: #fff8ee;
            border-bottom: 5px dashed #ff7a5a;
            padding: 15px 25px;
            box-shadow: 0px 6px 15px rgba(0,0,0,0.1);
            animation: fadeIn 0.5s ease-in-out;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 900;
            color: #ff7a5a !important;
            text-shadow: 2px 2px 5px rgba(0,0,0,0.15);
        }

        .navbar-nav .nav-link {
            font-weight: 700;
            color: #6a5af9 !important;
            margin-right: 15px;
            transition: 0.2s ease-in-out;
            border-radius: 12px;
            padding: 8px 14px !important;
        }

            .navbar-nav .nav-link:hover {
                background: #ffd29f;
                color: #583cf7 !important;
                transform: scale(1.05);
            }

        /* CARD PRINCIPAL PARA EL BODY */
        .main-card {
            background: white;
            border-radius: 25px;
            border: 4px dotted #ff7a5a;
            padding: 30px;
            box-shadow: 0px 10px 20px rgba(0,0,0,0.15);
            animation: fadeIn 0.6s ease-in-out;
            margin-top: 25px;
            margin-bottom: 30px;
        }

        footer {
            background: #fff8ee;
            border-top: 5px dashed #ff7a5a;
            text-align: center;
            padding: 15px;
            font-weight: 600;
            color: #6a5af9;
        }

        a {
            text-decoration: none;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-school">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">🎓 Skillup</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Inicio</a>
                        </li>

                       
                    </ul>
                    <ul class="navbar-nav ms-Auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Hola, @User.Identity!.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Cerrar Sesion</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="main-card">
            @RenderBody()
        </div>
    </div>

    <footer>
        © 2025 - Proyecto Escolar | Todos los derechos reservados 🎨✨
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
