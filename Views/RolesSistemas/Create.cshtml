@model Proyecto.Models.RolesSistema

@{
    ViewData["Title"] = "Crear Rol";
}

<style>
    body {
        background: linear-gradient(135deg, #ffecd2, #fcb69f);
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        color: #fff;
        font-weight: 800;
        margin-bottom: 10px;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.2);
    }

    h4 {
        text-align: center;
        color: #fff;
        font-size: 1.4rem;
        margin-bottom: 20px;
        text-shadow: 1px 1px 6px rgba(0,0,0,0.2);
    }

    .school-card {
        background: white;
        border-radius: 25px;
        padding: 30px;
        max-width: 600px;
        margin: auto;
        border: 4px dashed #ff7a5a;
        box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        animation: pop 0.6s ease;
    }

    @@keyframes pop {
        0% {
            transform: scale(0.95);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    label {
        font-weight: 700;
        margin-bottom: 5px;
        color: #6a5af9;
    }

    .form-control {
        border: 2px solid #ffd4c2;
        border-radius: 12px;
        padding: 10px;
        font-size: 1rem;
        margin-bottom: 10px;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #ff7a5a;
            box-shadow: 0 0 8px rgba(255, 122, 90, 0.5);
        }

    .btn-submit {
        background: linear-gradient(45deg, #ff7a5a, #ffb85f);
        color: white;
        border: none;
        padding: 12px 22px;
        font-size: 1.1rem;
        border-radius: 18px;
        font-weight: 700;
        width: 100%;
        margin-top: 15px;
        box-shadow: 0 5px 12px rgba(255, 122, 90, 0.4);
        transition: 0.2s ease-in-out;
    }

        .btn-submit:hover {
            transform: scale(1.05);
            filter: brightness(1.1);
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        font-weight: 700;
        font-size: 1.1rem;
        color: #fff;
        text-decoration: none;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.2);
    }

        .back-link:hover {
            text-decoration: underline;
        }

</style>


<h1>🎒 Crear un Rol</h1>
<h4>Completa la información</h4>

<div class="school-card">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Identificacion"></label>
            <input asp-for="Identificacion" class="form-control" />
            <span asp-validation-for="Identificacion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Apellido1"></label>
            <input asp-for="Apellido1" class="form-control" />
            <span asp-validation-for="Apellido1" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Apellido2"></label>
            <input asp-for="Apellido2" class="form-control" />
            <span asp-validation-for="Apellido2" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contraseña"></label>
            <input asp-for="Contraseña" class="form-control" />
            <span asp-validation-for="Contraseña" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdRol"></label>
            <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
        </div>

        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <input type="submit" value="Crear" class="btn-submit" />
    </form>
</div>

<a class="back-link" asp-action="Index">⬅ Volver a la lista</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
